/**index.wxss**/
.box {                           
  border: 5rpx solid #ffffff;
  box-shadow: 5rpx 5rpx 1rpx #cccccc;
}
.kcb-item {
  height: 80rpx;
  position: absolute;
  justify-content: center;
  display: flex;
  align-items: center;
  border-radius: 15rpx;
  width: 92rpx;
}
.smalltext {
  font-size: 7pt;
  color: #fff;
  padding-left: 10rpx;
}
.top {
  display: flex;
  flex-direction: row;
  margin-left: 50rpx;
}

.top-text {
  border-radius: 10rpx;
  background-color: #F0F0F0;
  width: 100rpx;
  height: 50rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;
}

.scroll {
  z-index: 1;
  position: absolute;
}
.left {
  border-radius: 10rpx;
  width: 42rpx;
  height: 312rpx;
  font-size: 16pt;
  justify-content: center;
  display: flex;
  align-items: center;
  background-color: #F0F0F0;
}
.currentDate {
  z-index: 0;
  position: absolute;
  width:100rpx;
  height: 960rpx;
  background-color:hsla(130,50%,50%,0.2);
}
.add{
  z-index: 1;
  position: fixed;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
}
.toast{
  font-size: 12pt;
  border-radius: 25rpx;
  background-color: #B0E2FF;
  position: fixed;
  margin-left: 80rpx;
  width: 500rpx;
  top: 350rpx;
}
.toast-title{
  font-size: 14pt;
  border-radius: 20rpx;
  background-color: #9BCD9B;
  position: fixed;
  margin-left: 80rpx;
  top: 290rpx;
  width: 500rpx;
  height: 50rpx;
  justify-content: center;
  display: flex;
  align-items: center;
}
.input-title {
  justify-content: center;
  display: flex;
  align-items: center;
  height:60rpx;
  width: 180rpx;
}
.input {
  height: 60rpx;
  width: 320rpx;
}
.btn{
  font-size: 12pt;
  border-radius: 15px;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn-submit{
  color: #fff;
  flex: 1;
  margin-left:10rpx;
  margin-right:10rpx;
  background: #71C671;
}
.btn-hover{
  background: #a2c7e2;
}
.btn-cancel{
  flex: 1;
  color: #fff;
  margin-right:10rpx;
  background: #8C8C8C;
}
.flex-row{
  display: flex;
  margin: 10rpx 0;
  -webkit-box-pack: justify;
}
.tips {
  color: #A52A2A;
  font-size: 10pt;
}
.mask{
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: #000000;
  z-index: 10;
  opacity: 0.8;
}

.modal{
  width: 500rpx;
  height: auto;
  position: fixed;
  top: 450rpx;
  left: 125rpx;
  background-color: #ffffff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.modalTitle {
  border-top-left-radius: 25rpx;
  border-top-right-radius: 25rpx;
  background: #8B1A1A;
  color: #cccccc;
  display: flex;
  justify-content: center;
  font-size: 18pt;
  height: 80rpx;
  width: 500rpx;
}
.modalContent {
  height: 80rpx;
  width: 580rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 10pt;
}
.modalButton {
  font-size: 12pt;
  width: 250rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 0rpx;
}
.modalConfirm {
  background: #6fa6cf;
}
.modalCancel {
  background: #7A7A7A;
}

