.box {
  border: 2px solid #ffffff;
  border-radius: 5px;
  background-color: #F0F0F0;
  box-shadow: 4px 1px 1px #cccccc;
  margin: 8px;
  position: relative;
}
.text1 {
  color: green;
  font-size: 40rpx;
  text-align:center;
}
.text2 {
  color: red;
  font-size: 40rpx;
  text-align:center;
}
.text3 {
  color: royalblue;
  font-size: 40rpx;
  text-align:center;
}
.icon {
  height: 64rpx;
  padding-top: 12rpx;
}
.icon-delete {
  position: absolute;
  padding-top: 12rpx;
  height: 64rpx;
  right: 12rpx;
  color: "#6fa6cf";
}
.content_done {
  padding-left: 10rpx;
  padding-right: 54rpx;
  padding-top: 12rpx;
  height: 64rpx;
  color: #A8A8A8;
  text-decoration: line-through;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow:ellipsis;
}
.content_todo {
  padding-left: 10rpx;
  padding-right: 54rpx;
  padding-top: 12rpx;
  height: 64rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow:ellipsis;
}
.add{
  position: fixed;
  right: 80rpx;
  bottom: 80rpx;
  width: 72rpx;
  height: 72rpx;
}
.help{
  position: absolute;
  margin-top: 15rpx;
  margin-left: 450rpx;
  width: 36rpx;
  height: 36rpx;
}