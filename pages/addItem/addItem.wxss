/* pages/addItem/addItem.wxss */
.background {
  width: 100vw;
  height: 100vh;
  background-image: url('http://picapi.zhituad.com/photo/487/74/17ADC.jpg');
  background-size:100% 100%;
}
.flex-row{
  display: flex;
  margin: 10rpx 10rpx;
  -webkit-box-pack: justify;
}
.title {
  width: 100%;
  height: 80rpx;
  font-size: 16pt;
  color: #8968CD;
  display: flex;
  justify-content: center;
  align-items: center; 
}
.titleBlock {
  display: flex;
  justify-content: center;
  align-items: center;
}
.subject {
  position: absolute;
  margin-top: 200rpx;
  margin-left: 100rpx;
  height: 60rpx;
  width: 100rpx;
}
.subject-content {
  position: fixed;
  margin-top: 200rpx;
  margin-left: 200rpx;
  height: 60rpx;
  width: 450rpx;
}
.content-h {
  position: fixed;
  margin-top: 260rpx;
  margin-left: 100rpx;
  height: 60rpx;
  width: 100rpx;
}
.content {
  position: fixed;
  margin-top: 270rpx;
  margin-left: 200rpx;
  width: 450rpx;
  line-height: 20rpx;
  height: 400rpx;
}
.switch{
  transform: scale(0.5);
  vertical-align: middle;
}
.btn-submit{
  height: 100rpx;
  width: 100rpx;
  position: fixed;
  bottom: 100rpx;
  right: 100rpx;
}
.textSubmit {
  position: fixed;
  bottom: 60rpx;
  right: 100rpx;
  font-size: 8pt;
}

.btn-cancel{
  height: 100rpx;
  width: 100rpx;
  position: fixed;
  bottom: 100rpx;
  left: 100rpx;
}
.textReset {
  position: fixed;
  bottom: 60rpx;
  left: 100rpx;
  font-size: 8pt;
}